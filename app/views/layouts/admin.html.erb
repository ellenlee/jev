<!DOCTYPE html>
<html>
  <head>
    <title>JEV</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <!-- 管理功能導覽列 -->
    <div class="clearfix">
    <ul class="list-inline pull-left">
      <li><%= link_to '專案', admin_projects_path %></li>
      <li><%= link_to '創建專案', new_admin_project_path %></li>
      <li><%= link_to '專案成員', admin_users_path %></li>
      <li><%= link_to '創建學員帳號', new_admin_user_path %></li>
      <li><%= link_to '班級', admin_groups_path %></li>
    </ul>  
  
    <p class="pull-left"></p>
    <ul class="list-inline pull-right">
      <% if current_user %>
        <li><%= link_to "回到首頁", projects_path %></li>
        <li><%= link_to('登出', destroy_user_session_path, :method => :delete) %></li>
      <% else %>
        <%= link_to('註冊', new_registration_path(:user)) %> |
        <%= link_to('登入', new_session_path(:user)) %> or
      <% end %> 
    </ul>  
  </div>
  

  <!-- 警告訊息 -->
  <% if flash[:notice].present? %>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice]%>
    </div>
  <% elsif flash[:alert].present? %>
    <div class="alert alert-danger" role="alert">
      <%= flash[:alert]%>
    </div>
  <% end %>
  	
  <%= yield %>
</body>
</html>
