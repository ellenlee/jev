<%= render :partial => 'admin/projects/project_header', :locals => { project: @project, group: nil } %>

<%= render :partial => 'admin/projects/project_menu', :locals => { project: @project } %>


<div class="table-responsive" style="overflow-x: visible;">
	<table class="table table-condensed table-hover">
		<tr>
			<th>週</th>	
			<th>階段名</th>
			<th>類型</th>
			<th>#</th>
			<th>工作成果檔案</th>
			<th>上傳者</th>
			<th>上傳時間</th>
			<th>狀態</th>
			
		</tr>
		<% @uploads.each do |upload| %>
			<tr>
				<td><%= upload.stage_num %></td>
				<td><%= upload.stage_name %></td>
				<td><%= upload.task.team_work_show %></td>
				<td><%= upload.assignment.num %></td>
				<td class="text-left"><%= link_to upload.document_file_name, upload.document.url %></td>
				<td><%= upload.user.name %></td>
				<td class="text-muted small"><%= upload.updated_at.strftime('%m-%d %H:%M') %></td>
				<td><%= upload.on_time_show %></td>
			</tr>
		<% end %>
	</table>
</div>