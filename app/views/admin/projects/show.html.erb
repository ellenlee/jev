<%= render :partial => 'project_header', :locals => { project: @project, group: nil } %>
<%= render :partial => 'admin/projects/project_menu', :locals => { project: @project } %>

<div class="table-responsive" style="overflow-x: visible;">
	<table class="table table-condensed table-hover">
		<tr>
			<th>#</th>
			<th>班別</th>
			<th>週</th>
			<th>工作階段</th>
			<th>出席數</th>
			<th>上傳成果數</th>
			<th>操作</th>
		</tr>

		<% @stages.each do |stage| %>
			<tr>
				<td><%= stage.id %></td>
				<td><%= stage.group.name %></td>
				<td><%= stage.num %></td>
				<td><%= link_to stage.name, admin_project_stage_path(@project, stage) %></td>
				<td>-</td>
				<td><%= stage.uploads.count %></td>
				<td><%= link_to '編輯', edit_admin_project_stage_path(@project, stage) %>｜
					<%= link_to '刪除', admin_project_stage_path(@project, stage), method: :delete, data:{confirm: 'Are you sure?'} %></td>
			</tr>
		<% end %>
	</table>
</div>
<center>
	
	<%= link_to '發佈工作階段', new_admin_project_stage_path(@project), class:"btn btn-info active btn-sm pull-right" %>	
</center>
