<h1>JEV</h1>

<table class="table table-condensed table-bordered">
	<tr>
		<th>#</th>
		<th>專案名稱</th>
		<th>狀態</th>
		<th>工作階段</th>
		<th>執行班級</th>
		<th>參與成員</th>
	</tr>
	<% (Status.find(2).projects + Status.find(1).projects).each do |project| %>
	<tr>
			<td><%= project.id %></td>
			<td><%= link_to project.name, project_stages_path(project) %></td>
			<td><%= project.status.name %></td>	
			<td>
				<% project.stages.each do |s| %>
					<%= s.name %><br>
				<% end %>	
			</td>
			<td>
				<% project.groups.each do |group| %>
					<%= group.name %>(<%= Participant.where(project: project, group: group).count %>)<br>
				<% end %>	
			</td>
			<td>
				<%= link_to '查看成員', admin_project_path(project) %>(<%=project.users.count%>)

			</td>
	</tr>	
	<% end %>
</table>
