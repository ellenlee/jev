<h1>JEV</h1>

<%= button_to '創建專案', new_admin_project_path %>
<br>
<table class="table table-condensed table-bordered">
	<tr>
		<th>#</th>
		<th>專案名稱</th>
		<th>專案類別</th>
		<th>執行狀態狀態</th>
		<th>執行班級</th>
		<th>工作階段</th>
		<th>學員數</th>
	</tr>
	<% Project.all.each do |project| %>
	<tr>
			<td><%= project.id %></td>
			<td><%= link_to project.name, admin_project_path(project) %></td>
			<td><%= project.category.name %></td>
			<td><%= project.status.name %></td>	
			<td>
				<% project.groups.each do |group| %>
					<%= group.name %><small>(9)</small><br>
				<% end %>
			</td>
			<td>
				<% project.stages.each do |s| %>
					<%= s.name %><br>
				<% end %>	
			</td>
			<td>
				<%=project.users.count%>
			</td>
	</tr>	
	<% end %>
</table>
