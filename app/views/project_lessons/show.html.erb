<blockquote>
	<h4><%= @project.name %>(<%= @group.name %>)</h4>
	<h2>第<%= @stage.num %>週：<%= @lesson.name %></h2>	
</blockquote>

<p class="text-right">發佈時間｜<%= @lesson.published_at.strftime('%Y-%m-%d %H:%M') %>
</p>
<div class="pull-left bg-warning">您參加的是<strong><%= @group.name %> 第<%= @team.num %>組</strong></div>
<%= link_to "返回專案", project_path(@project), class:"btn btn-info btn-xs active pull-right" %>
<br><br>


<div class="table-responsive" style="overflow-x: visible;">
	<table class="table table-condensed table-hover">
		<tr>
			<th>#</th>
			<th>工作項目</th>
			<th>型態</th>
			<th>繳交期限</th>
			<th>檔案連結</th>
			<th>首次上傳時間</th>
			<th>最後上傳者</th>
			<th>狀態</th>
			<th>操作</th>	
		</tr>

		<% @assignments.each do |assign| %>
			<tr>
				<td><%= assign.num %></td>
				<td><%= assign.task.name %></td>
				<td>
					<% if assign.task.team_work? %>
						小組
					<% else %>
						個人
					<% end %>
				</td>
				<td class="text-muted small"><%= assign.deadline.strftime('%m/%d %H:%M') %></td>
				<% if current_user.uploads.where(task: assign.task).any? %>
					<% upload = current_user.uploads.where(task: assign.task).first %>
					<td><%= link_to upload.document_file_name, upload.document.url %></td>
					<td class="text-muted small"><%= upload.created_at.strftime('%m-%d %H:%M') %></td>	
					<td><%= upload.user.name %></td>
					<td>
						<% if upload.on_time? %>
							準時
						<% else %>
							遲交
						<% end %>
					</td>
				<% else %>
					<td colspan="4" class="text-muted small">尚未上傳</td>
						
				<% end %>
				<td>重傳｜刪除</td>
			</tr>
		<% end %>
	</table>
</div>
<h4>成果上傳區</h4>
<%= form_for [@project, @upload] do |f| %>
	<div class="field">
		<%= f.hidden_field :group_id, value: @group.id %>
		<%= f.hidden_field :stage_id, value: @stage.id %>
		<%= f.hidden_field :team_id, value: @team.id %>
		<%= f.hidden_field :lesson_id, value: @lesson.id %>
    <%= f.label :task_id, "工作項目" %>
    <%= f.collection_select :task_id, @tasks, :id, :name,  :prompt => "請選擇"  %>
  </div>
	<%= f.file_field :document %>
  <%= f.submit class: "btn btn-xs" %>
<% end %>

<br>
<br>